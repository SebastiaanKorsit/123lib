<div style='margin: 0 -5%; width: 100%; height: 650px; padding-top: 40px; margin-bottom: 40px; box-shadow: inset 0 1px 2px 0 rgba(0, 0, 0, .35); background-size: cover; background-position-y: bottom; background-image: url("{{ brand.image }}");'>
    <div style='text-align: center; margin-bottom: 40px;'>
        <div style='font-size: 50px; color: white; text-shadow: -1px 1px 4px rgba(0,0,0,0.75); font-weight: bold; font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;'>
            {{> partial_slogan }}
        </div>
    </div>
    <div class='container' style='background-color: rgba(0, 0, 0, .2); padding: 40px; border-radius: 10px;'>
        <div class='grid grid-responsive'>
            {{# products }}
            <div class='col col-3'>
                <article class='product product-card'>
                    
                    <a href='{{ getLocation }}' class='cover' style='background-image: url("{{ getImage }}");'></a>
                    <div class='price' style='background-color: {{ getColor }}'>
                        &euro;{{ getPrice.getUpper }}<sup>{{ getPrice.getLower }}</sup>
                    </div>
                    <h2>
                        <a href='{{ getLocation }}'>{{ getName }}</a>
                    </h2>
                    {{# isAvailable }}
                        <button class="button button-orange" onclick='window.location = "{{ getLocation }}";'>Bekijken</button>
                    {{/ isAvailable }}
                    {{^ isAvailable }}
                        <span class='font font-color-light'>Niet op voorraad</span>
                    {{/ isAvailable }}
                </article>
            </div>
            {{/ products }}
        </div>
    </div>
</div>

{{> partial_wrapper }}